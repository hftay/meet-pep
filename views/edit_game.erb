
<div class="create-wrapper">

	<div class="box a">

	<h1 style="margin-bottom: 10px;">Making a change?</h1>

		<form action="/game/<%= @game.id %>/edit" method="post">
			<input type="hidden" name="_method" value="put">
			
			<div class="form-group row">
					
				<label for="title" class="col-sm-2 col-form-label">Title:</label>	
				<div class="col-sm-10">
					<input class="form-control" type="text" name="title" value="<%= @game.title %>" required="required">
				</div>

				<label for="date" class="col-sm-2 col-form-label">Date:</label>	
				<div class="col-sm-10">
					<input class="form-control" type="date" name="date" value="<%= @game.date.localtime.strftime("%Y-%m-%d") %>" required="required">
				</div>

				<label for="time" class="col-sm-2 col-form-label">Time:</label>	
				<div class="col-sm-10">
					<input class="form-control" type="text" name="time" value="<%= @game.date.localtime.strftime("%H:%M") %>" required="required">
				</div>		

				<label for="venue" class="col-sm-2 col-form-label">Venue:</label>	
				<div class="col-sm-10">
					<input class="form-control" type="text" name="venue" value="<%= @game.venue %>" required="required">
				</div>

				<label for="description" class="col-sm-4 col-form-label">Description:</label>	
				<div class="col-sm-12">
					<textarea class="form-control" name="description" cols="30" rows="3"><%= @game.description %></textarea>
				</div>	
		
			</div>

			<button style="margin-bottom: 10px;" class="btn btn-dark btn-lg btn-block" type="submit">Update</button>
		</form>
				
		<form action="/game/<%= @game.id %>" method="get">
			<button class="btn btn-outline-dark btn-lg btn-block" type="submit">Return</button>
		</form>

	</div>

</div>
