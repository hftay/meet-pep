<div class="login-wrapper">

	<div class="box a">

		<h1>Log In</h1>

		<form action="/session" name="" method="post">

			<div class="form-group row">
				
				<label class="col-sm-3 col-form-label">Email:</label>	
				<div class="col-sm-9">
					<input class="form-control" type="email" name="email" placeholder="">
				</div>

				<label class="col-sm-3 col-form-label">Password:</label>	
				<div class="col-sm-9">
					<input class="form-control" type="password" name="password" style="margin-bottom: 15px;">
					<!-- <br> -->
				</div>

				<em style="color: grey; margin: 0 auto; margin-bottom: 15px;"> <%= @error_message %> </em>
				<button class="btn btn-dark btn-lg btn-block" type="submit">LOGIN</button>
			
			</div>

		</form>


		<div>Need an account? <a href="/signup">Sign Up</a> </div>
	
	</div>

</div>