<div class="stats-table-view-wrapper">
  <div class="box a">

    <h2> <%= @league.title %> </h2>
    <br>

    <table class="table">
      <thead>
        <tr>
          <th>#</th>
          <th>Player Username</th>
          <th>Games Won</th>
          <th>Goals</th>
          <th>Assists</th>
        </tr>
      </thead>

      <tbody>
      <% @leaguestats.each do |leaguestat| %>

        <form action="/league/<%= @league.id %>/stats_table_edit" method="post">
          <input type="hidden" name="_method" value="put">
          <input type="hidden" name="leaguestat_id" value="<%= leaguestat.id %>">
          
          <tr>
            <th scope="row">*</th>

            <td> 
              <div class="col-sm-10">
                <%if leaguestat.user == nil %>
                  <input class="form-control" type="text" name="user_id" value="<%= leaguestat.user %>">
                <%else%>
                  <input class="form-control" type="text" name="user_id" value="<%= leaguestat.user.username %>">
                <%end%>
              </div>
            </td>

            <td> 
              <div class="col-sm-8">
                <input class="form-control" type="text" name="games_won" value="<%= leaguestat.games_won %>">
              </div>
            </td>

            <td> 
              <div class="col-sm-8">
                <input class="form-control" type="text" name="goals" value="<%= leaguestat.goals %>">
              </div>
            </td>

            <td> 
              <div class="col-sm-8">
                <input class="form-control" type="text" name="assists" value="<%= leaguestat.assists %>">
              </div>
            </td>

            <td>
                <button class="btn btn-outline-primary" type="submit">Update</button>
            </td>
          </tr>

        </form>        

      <%end%>
       
      </tbody>

    </table>

    <a class="btn btn-outline-primary btn-lg btn-block" href="/league/<%= @league.id %>/stats_table_view">Return</a>

  </div>
</div>
